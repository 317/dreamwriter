@require "mixins/page-text"
@require "sidebars"

dark-brown = #644B2B

#file-buttons
  margin-bottom 25px

#add-chapter
  cursor pointer
  font-size 32px

  color header-body-element
  text-shadow 1px 1px 1px (header-control-shadow)

  &:hover
    color header-control-color

#left-sidebar-container
  position relative
  flex-grow(1)
  padding-right 0

  width 100%
  box-sizing border-box

  // This one looks just a tad small at 32px
  .sidebar-header-control.flaticon-cloud134
    font-size 36px
    position relative
    top -1px

#left-sidebar-header
  margin 0
  padding 0
  padding-right 16px

#left-sidebar-body
  margin-top 36px
  padding-right 12px
  margin-right 4px

#title, #outline li
  box-sizing border-box
  padding 8px 16px
  min-height 43px
  margin 0
  margin-top 8px
  cursor pointer

  page-text()

  font-size 16px

  background-color header-body-element
  box-shadow 1px 1px 1px (header-control-shadow)

  // Leave room for the shadow!
  margin-right 2px
  margin-bottom 2px

  &:hover
    background-color header-control-color

#title
  font-size 24px
  margin-top 0

#outline
  box-sizing border-box
  padding 0
  margin 0

  li
    font-size 18px
    list-style-position inside
    list-style-type none
    text-overflow ellipsis
    white-space nowrap
    overflow hidden

#open
  .open-entry
    font-family Georgia, Times New Roman, serif
    font-size 18px
    padding 0.5em 1em 0.5em 1em
    min-height 1.5em
    margin 0.5em
    background-color white
    border-radius 1em
    border 1px solid dark-brown
    cursor pointer

    .delete
      font-size 0.75em
      background dark-brown
      color toolbar-background
      border 1px solid dark-brown
      border-radius 20px
      margin-top 2px
      float right
      height 22px
      padding 2px 0.5em 2px 0.5em

    &.from-file
      font-family inherit

    &.current
      opacity: 0.5

      &:hover
        opacity: inherit

    &:hover
      background-color #F4F0EC

    .deleted
      font-style italic
      border none
      background none
      cursor inherit

      button
        padding-left 1em
        padding-right 1em
        margin-left 1em

      :hover
        background inherit

#current-doc-view
  font-family Georgia, Times New Roman, serif

#openFileChooser
  opacity 0
  position absolute
  top 0
    left 0