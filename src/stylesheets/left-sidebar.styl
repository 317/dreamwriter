@require "mixins/page-text"

dark-brown = #644B2B

#file-buttons
  margin-bottom 25px

#add-chapter
  margin-left 7px
  cursor pointer
  font-size 32px

  &:hover
    color black

#left-sidebar-container
  position relative
  flex-grow 1

  width 100%
  overflow auto
  box-sizing border-box

  color #644b2b

  // This one looks just a tad small at 32px
  .sidebar-header-control.flaticon-cloud134
    font-size 36px
    position relative
    top -1px

#title, #outline li
  padding 4px
  min-height 1em
  margin 0
  cursor default

  page-text()

  font-size 16px
  border 1px solid transparent

  &:hover
    background-color #e0c59e
    box-shadow 2px 2px 2px #644b2b
    border 1px solid #644b2b

#title
  font-size 24px
  margin 12px
  margin-top 45px
  margin-bottom 6px
  box-sizing border-box
  cursor pointer

#outline
  box-sizing border-box
  padding 0 12px
  margin-top 0

  li
    font-size 18px
    list-style-position inside
    list-style-type none
    text-overflow ellipsis
    white-space nowrap
    overflow hidden
    cursor -webkit-grab

#open
  .open-entry
    font-family Georgia
    font-size 18px
    padding 0.5em 1em 0.5em 1em
    min-height 1.5em
    margin 0.5em
    background-color white
    border-radius 1em
    border 1px solid dark-brown
    cursor pointer

    .delete
      font-size 0.75em
      background dark-brown
      color toolbar-background
      border 1px solid dark-brown
      border-radius 20px
      margin-top 2px
      float right
      height 22px
      padding 2px 0.5em 2px 0.5em

    &.from-file
      font-family inherit

    &.current
      opacity: 0.5

      &:hover
        opacity: inherit

    &:hover
      background-color #F4F0EC

    .deleted
      font-style italic
      border none
      background none
      cursor inherit

      button
        padding-left 1em
        padding-right 1em
        margin-left 1em

      :hover
        background inherit

#current-doc-view
  font-family Georgia, 'Times New Roman', serif

#openFileChooser
  opacity 0
  position absolute
  top 0
    left 0