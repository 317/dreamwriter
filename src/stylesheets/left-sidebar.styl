@require "mixins/page-text"
@require "sidebars"

dark-brown = #644B2B
outline-elem-background = rgb(135, 130, 145)

#file-buttons
  margin-bottom 25px

#add-chapter
  cursor pointer
  font-size 32px

  color outline-elem-background
  text-shadow 1px 1px 1px header-control-shadow

  &:hover
    color header-control-hover

#left-sidebar-container
  position relative
  flex-grow 1
  margin-right 8px

  width 100%
  box-sizing border-box

  // This one looks just a tad small at 32px
  .sidebar-header-control.flaticon-cloud134
    font-size 36px
    position relative
    top -1px

#title, #outline li
  box-sizing border-box
  padding 8px 16px
  min-height 1em
  margin 0
  margin-top 8px
  cursor default

  page-text()

  font-size 16px

  color rgb(52, 54, 90)
  background-color outline-elem-background
  box-shadow 1px 1px 1px header-control-shadow

  &:hover
    background-color #fff

#title
  font-size 24px
  margin-top 36px

  cursor pointer

#outline
  box-sizing border-box
  padding 0
  margin 0

  li
    font-size 18px
    list-style-position inside
    list-style-type none
    text-overflow ellipsis
    white-space nowrap
    overflow hidden
    cursor -webkit-grab

#open
  .open-entry
    font-family Georgia
    font-size 18px
    padding 0.5em 1em 0.5em 1em
    min-height 1.5em
    margin 0.5em
    background-color white
    border-radius 1em
    border 1px solid dark-brown
    cursor pointer

    .delete
      font-size 0.75em
      background dark-brown
      color toolbar-background
      border 1px solid dark-brown
      border-radius 20px
      margin-top 2px
      float right
      height 22px
      padding 2px 0.5em 2px 0.5em

    &.from-file
      font-family inherit

    &.current
      opacity: 0.5

      &:hover
        opacity: inherit

    &:hover
      background-color #F4F0EC

    .deleted
      font-style italic
      border none
      background none
      cursor inherit

      button
        padding-left 1em
        padding-right 1em
        margin-left 1em

      :hover
        background inherit

#current-doc-view
  font-family Georgia, 'Times New Roman', serif

#openFileChooser
  opacity 0
  position absolute
  top 0
    left 0