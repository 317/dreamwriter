@require "mixins/page-text"
@require "page"
@require "sidebars"

note-text       = rgb(4, 3, 5)
note-background = rgb(193, 170, 149)
note-hover      = #fff

search-notes-color = rgb(152, 125, 152)

#right-sidebar-container
  position relative
  flex-grow 1

  margin-left 8px

  width 100%
  box-sizing border-box

#right-sidebar-header
  padding-bottom 0
  margin-bottom 0

#notes-search-button
  font-size 34px
  margin-left 5px

#notes-search-text
  font-family 'Ubuntu', Helvetica, Arial, sans-serif
  text-shadow none
  cursor text
  border none
  padding 0 12px
  flex-grow 1
  font-size 18px
  height 36px
  margin-top 2px

  background-color header-control-color
  border-top 1px solid rgb(191, 166, 169)
  border-left 1px solid rgb(191, 166, 169)
  border-bottom 1px solid rgb(229, 199, 202)
  border-right 1px solid rgb(229, 199, 202)
  color inherit

  &:hover
    background-color header-control-hover

  &:focus
    background-color #fff

    border-top 1px solid rgb(80, 54, 101)
    border-left 1px solid rgb(80, 54, 101)
    border-bottom 1px solid rgb(152, 125, 152)
    border-right 1px solid rgb(152, 125, 152)

#notes
  padding 20px
  margin-left 10px
  box-sizing border-box

  page-text()

  font-size 16px
  line-height 1.62em

  p
    text-indent 0

.note-listing
  font-size 18px
  padding 8px
  cursor pointer
  display flex

  margin-bottom 8px

  color note-text
  
  background-color note-background

  &:hover
    background-color note-hover

.note-listing-title
  flex 1

.note-listing-icon
  margin-right 6px

#current-note
  padding 16px
  margin-bottom 8px
  color note-text
  background-color note-background

#current-note-title-container
  font-size 24px
  display flex

#current-note-title
  flex-grow 1

#close-current-note
  font-size 18px
  padding 3px
  min-width 24px
  cursor pointer

  &:hover
    color black

#current-note-controls
  display flex
  justify-content space-between
  padding-left 16px
  padding-right 16px
  padding-bottom 0

.current-note-control
  font-size 24px
  width 42px
  text-align center
  cursor pointer

  color header-control-color

  &:hover
    color header-control-hover

  &.flaticon-cloud134
    font-size 28px
    position relative
    top -1px

  &.flaticon-closed18
    font-size 34px
    position relative
    top -5px

#current-note-body
  font-size 18px
  margin 12px 0