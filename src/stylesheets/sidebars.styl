header-control-color = rgb(190, 179, 181)
header-control-hover = #FFF
header-control-shadow = rgb(52, 54, 90)

.sidebar
  font-family 'Ubuntu', Helvetica, Arial, sans-serif
  display flex
  flex-direction column

.sidebar-header
  display flex
  justify-content space-between
  box-sizing border-box
  padding 8px 16px
  height 58px
  flex-shrink 0

.sidebar-header-control
  font-size 32px
  color header-control-color
  text-shadow 1px 1px 1px header-control-shadow
  padding 2px
  cursor pointer

  &:hover
    color header-control-hover

.sidebar-body
  overflow auto

.sidebar-footer
  height 48px
  padding 8px
  flex-shrink 0