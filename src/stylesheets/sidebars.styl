header-control-color = #E0C59E
header-control-hover = #F4F0EC

.sidebar
  font-family 'Ubuntu', Helvetica, Arial, sans-serif
  display flex
  flex-direction column

.sidebar-header
  display flex
  justify-content space-between
  box-sizing border-box
  padding 8px 16px
  height 58px
  flex-shrink 0

.sidebar-header-control
  font-size 32px
  color header-control-color
  text-shadow 2px 2px 2px #644b2b
  padding 2px
  cursor pointer

  &:hover
    color header-control-hover

.sidebar-body
  overflow auto

.sidebar-footer
  height 48px
  padding 8px
  flex-shrink 0